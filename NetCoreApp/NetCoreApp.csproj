<Project Sdk="Microsoft.NET.Sdk">
	<Import Project="$(MSBuildProjectDirectory)\..\Props\Mile.Xaml.props" />
	<Import Project="$(MSBuildProjectDirectory)\..\Props\NetCoreApp.ModernDotNetUAPXamlCompiler.targets" />
	
	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<Platforms>x86;x64;ARM64</Platforms>
		<RootNamespace>NetCoreApp</RootNamespace>
		<RuntimeIdentifiers>win-x86;win-x64;win-arm64</RuntimeIdentifiers>
		<TargetFramework>net8.0-windows10.0.22621.0</TargetFramework>
		<TargetPlatformVersion>10.0.22621.0</TargetPlatformVersion>
		<TargetPlatformMinVersion>10.0.17763.0</TargetPlatformMinVersion>
		<LangVersion>latest</LangVersion>
		<Nullable>enable</Nullable>
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
		<DefaultXamlRuntime>UAP</DefaultXamlRuntime>
		<IsAotCompatible>true</IsAotCompatible>
		<PublishAot>true</PublishAot>
		<WindowsSdkPackageVersion>10.0.22621.35-preview</WindowsSdkPackageVersion>
		<CsWinRTUIXamlProjections>WindowsUIXaml</CsWinRTUIXamlProjections>
		<MileXamlEnableIntelliSenseForDotNet>false</MileXamlEnableIntelliSenseForDotNet>
	</PropertyGroup>
	
	<ItemGroup>
		<PackageReference Include="Microsoft.Windows.CsWinRT" Version="2.1.1-wux" />
		<ProjectReference Include="../WuxProjection/WuxProjection.csproj" />
		<ProjectReference Include="../WinUIProjection/WinUIProjection.csproj" />
		
		<!-- HACK: Shim libraries, will be referenced in XAML compile only. -->
		<!-- See NetCoreApp.ModernDotNetUAPXamlCompiler.targets -->
		<ProjectReference Include="../SystemInteropServicesWindowsRuntimeShim/SystemInteropServicesWindowsRuntimeShim.csproj" ReferenceOutputAssembly="false"/>
		<ProjectReference Include="../SystemRuntimeWindowsRuntimeShim/SystemRuntimeWindowsRuntimeShim.csproj" ReferenceOutputAssembly="false"/>
		<ProjectReference Include="../SystemRuntimeWindowsRuntimeXamlShim/SystemRuntimeWindowsRuntimeXamlShim.csproj" ReferenceOutputAssembly="false"/>
	</ItemGroup>

</Project>
